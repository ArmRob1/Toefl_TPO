<Page x:Class="Toefl_TPO.Pages.AnswerEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Toefl_TPO.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="400"
      Title="AnswerEditPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.125*"/>
            <RowDefinition Height="0.75*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel 
            Grid.Row="0" 
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <Label 
                x:Name="questionNumber"
                HorizontalAlignment="Center"
                Content="1st question"/>
        </StackPanel>

        <TextBox 
            x:Name="questionTextBox"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="5"/>

        <StackPanel 
            Grid.Row="2" 
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <Label 
                HorizontalAlignment="Center"
                Content="Answer's"/>
        </StackPanel>
    </Grid>
</Page>